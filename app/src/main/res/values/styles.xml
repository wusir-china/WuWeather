<resources>

    <!-- Base application theme. android:Theme.Material-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#fff</item><!--@color/colorPrimary-->
        <item name="colorPrimaryDark">#fff</item><!--@color/colorPrimaryDark-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="TabLayoutText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#999</item>
    </style>
    <style name="Comment" parent="android:TextAppearance">
        <item name="android:textSize">14dp</item>
    </style>

</resources>
